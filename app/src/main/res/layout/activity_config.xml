<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crystian.panico.ConfigActivity">

    <EditText
        android:id="@+id/txTelefone3"
        android:layout_width="155dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telefone 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txTelefone2" />

    <CheckBox
        android:id="@+id/cbTelefone3Sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:checked="true"
        android:text="SMS"
        app:layout_constraintStart_toEndOf="@+id/cbTelefone3Ligar"
        app:layout_constraintTop_toBottomOf="@+id/cbTelefone2Sms" />

    <CheckBox
        android:id="@+id/cbTelefone3Ligar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:checked="true"
        android:text="LIGAR"
        app:layout_constraintStart_toEndOf="@+id/txTelefone3"
        app:layout_constraintTop_toBottomOf="@+id/cbTelefone2Ligar" />

    <EditText
        android:id="@+id/txTelefone2"
        android:layout_width="157dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telefone 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txTelefone1" />

    <CheckBox
        android:id="@+id/cbTelefone2Sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:checked="true"
        android:text="SMS"
        app:layout_constraintStart_toEndOf="@+id/cbTelefone2Ligar"
        app:layout_constraintTop_toBottomOf="@+id/cbTelefone1Sms" />

    <CheckBox
        android:id="@+id/cbTelefone2Ligar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="32dp"
        android:checked="true"
        android:text="LIGAR"
        app:layout_constraintStart_toEndOf="@+id/txTelefone2"
        app:layout_constraintTop_toBottomOf="@+id/cbTelefone1Ligar" />

    <EditText
        android:id="@+id/txTelefone1"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telefone 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbTelefone1Ligar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="84dp"
        android:checked="true"
        android:text="LIGAR"
        app:layout_constraintStart_toEndOf="@+id/txTelefone1"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbTelefone1Sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="84dp"
        android:checked="true"
        android:text="SMS"
        app:layout_constraintStart_toEndOf="@+id/cbTelefone1Ligar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btSalvarConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:onClick="GravarConf"
        android:text="Salvar Configurações"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txTelefone3"
        app:layout_constraintVertical_bias="0.545" />

</androidx.constraintlayout.widget.ConstraintLayout>